subroutine FindDstTile(scircle, dcircle, dstind, Nt)
  real, intent(in) :: scircle(3), dcircle(3,Nt)
  integer, intent(in) :: Nt
  integer, intent(out) :: dstind
  real :: d,s
  integer :: tt

  !f2py intent(in) :: scircle, dcircle
  !f2py intent(out) :: dstind
  !f2py intent(hide) :: Nt

  d=0
  s=1.e30
  dstind=-1
  do tt=1,Nt
     d=acos(sum(scircle*dcircle(:,tt)))
     if(d<=0.0) then
        print*, 'Error. Distance is less than zero. d=', d
        call exit(-1)
     end if
     if(d<s) then
        s=d
        dstind=tt-1
     end if
  end do
  
end subroutine FindDstTile

     
