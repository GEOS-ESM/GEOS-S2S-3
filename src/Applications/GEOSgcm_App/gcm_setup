   /bin/mkdir -p $EXPDIR/ocean_das
   /bin/cp -r ${GEOSSRC}/Applications/UMD_Etc $EXPDIR/ocean_das
#   /bin/ln -s $EXPDIR/ocean_das/UMD_Etc/scripts $EXPDIR/ocean_das/UMD_Etc/UMD_scripts
